if (hexo-config('sidebar.position') == 'right') {
  .sidebar {
    right: 0 - $sidebar-desktop;

    &.sidebar-active {
      right: 0;
    }
  }

  .sidebar-toggle, .back-to-top {
    left: auto;
    right: $b2t-position-right;

    +tablet-mobile() {
      right: $b2t-position-right-mobile;
    }
  }

  .book-mark-link {
    left: $b2t-position-right;
  }
} else {
  .sidebar {
    left: 0 - $sidebar-desktop;

    &.sidebar-active {
      left: 0;
    }
  }
}

.sidebar {
  background: url("/images/sidebar-bg1.jpg") repeat !important;
  background-image: url("/images/sidebar-bg1.jpg") repeat !important;
  background-size: cover !important;
  position: fixed !important;
  right: 0 !important;
  top: 0 !important;
  bottom: 0 !important;
  width: $sidebar-desktop;
}
